<div class="page-fragments">
  <h2> Page Fragments </h2>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @page_fragments.each do |page_fragment| %>
        <tr>
        <td><%= page_fragment.short_name %></td>
        <td><%= link_to "Edit", url_for(:action => :edit, :id => page_fragment.id)%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>